{
  "name": "@fonz/tgcc",
  "version": "0.6.19",
  "description": "Telegram â†” Claude Code CLI bridge",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./process": {
      "types": "./dist/cc-process.d.ts",
      "import": "./dist/cc-process.js"
    },
    "./protocol": {
      "types": "./dist/cc-protocol.d.ts",
      "import": "./dist/cc-protocol.js"
    },
    "./session": {
      "types": "./dist/session.d.ts",
      "import": "./dist/session.js"
    },
    "./streaming": {
      "types": "./dist/streaming.d.ts",
      "import": "./dist/streaming.js"
    },
    "./plugin": {
      "types": "./dist/plugin/index.d.ts",
      "import": "./dist/plugin/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "process": [
        "dist/cc-process.d.ts"
      ],
      "protocol": [
        "dist/cc-protocol.d.ts"
      ],
      "session": [
        "dist/session.d.ts"
      ],
      "streaming": [
        "dist/streaming.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc && tsc -p plugin/tsconfig.json",
    "dev": "tsx src/service.ts",
    "start": "node dist/service.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "bin": {
    "tgcc": "dist/cli.js"
  },
  "author": "fnz",
  "license": "MIT",
  "keywords": [
    "telegram",
    "claude",
    "claude-code",
    "cli",
    "bridge",
    "ai",
    "anthropic"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/botverse/tgcc"
  },
  "homepage": "https://github.com/botverse/tgcc#readme",
  "bugs": {
    "url": "https://github.com/botverse/tgcc/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "grammy": "^1.40.0",
    "pino": "^10.3.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@sinclair/typebox": "0.34.48",
    "@types/node": "^25.3.0",
    "@types/uuid": "^11.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist",
    "plugin/openclaw.plugin.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
